{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.js", "types/**/*.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "mermaid": ["types/mermaid-shim"]
    },
    "importHelpers": false,
    "typeRoots": ["./types", "node_modules/@types", "../../node_modules/@types"],
    "lib": ["esnext", "dom", "dom.iterable"]
  }
}
